{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": [
      "ES7",
      "ES6",
      "ES2019",
      "ES2020",
      "ES2020.String",
      "dom"
    ],
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "jsx": "react"
  },
  "include": [
    "./src/webviews/types.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}
