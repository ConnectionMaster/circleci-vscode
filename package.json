{
  "name": "circleci-vscode",
  "displayName": "CircleCI",
  "description": "Monitor, inspect, run, and cancel Pipeline Builds on CircleCI",
  "version": "0.2.0",
  "license": "MIT",
  "publisher": "jodyh",
  "keywords": [
    "continuous integration",
    "circle ci",
    "CI/CD"
  ],
  "galleryBanner": {
    "color": "#161616",
    "theme": "dark"
  },
  "preview": true,
  "icon": "dist/assets/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/jodyheavener/circleci-vscode.git"
  },
  "homepage": "https://github.com/jodyheavener/circleci-vscode",
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.49.2"
  },
  "scripts": {
    "compile": "webpack --mode development",
    "lint": "eslint",
    "vscode:prepublish": "webpack --mode production",
    "watch": "webpack --mode development --watch"
  },
  "dependencies": {
    "circle-client": "^0.1.3",
    "follow-redirects": "^1.13.0",
    "open": "^7.2.1"
  },
  "devDependencies": {
    "@types/follow-redirects": "^1.13.0",
    "@types/node": "^14.11.2",
    "@types/vscode": "^1.49.0",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.1.1",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "ts-loader": "^8.0.4",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:circleciTree",
    "workspaceContains:circle.yaml",
    "workspaceContains:circle.yml",
    "workspaceContains:.circleci/config.yaml",
    "workspaceContains:.circleci/config.yml"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "circleciContainer",
          "title": "CircleCI",
          "icon": "./dist/assets/icon-logo.svg"
        }
      ]
    },
    "views": {
      "circleciContainer": [
        {
          "id": "circleciTree",
          "name": "Pipelines"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "when": "viewItem == circleciPipeline || viewItem == circleciWorkflow || viewItem == circleciJob",
          "command": "circleci.reload",
          "group": "circleci"
        },
        {
          "when": "viewItem == circleciPipeline || viewItem == circleciWorkflow || viewItem == circleciJob",
          "command": "circleci.openPage",
          "group": "circleci"
        },
        {
          "when": "viewItem == circleciWorkflow",
          "command": "circleci.cancelWorkflow",
          "group": "circleci"
        },
        {
          "when": "viewItem == circleciWorkflow",
          "command": "circleci.retryWorkflowAll",
          "group": "circleci"
        },
        {
          "when": "viewItem == circleciWorkflow",
          "command": "circleci.retryWorkflowFailed",
          "group": "circleci"
        },
        {
          "when": "viewItem == circleciWorkflow",
          "command": "circleci.copyWorkflowId",
          "group": "circleci"
        },
        {
          "when": "viewItem == circleciJob",
          "command": "circleci.cancelJob",
          "group": "circleci"
        },
        {
          "when": "viewItem == circleciJob",
          "command": "circleci.copyJobId",
          "group": "circleci"
        },
        {
          "when": "viewItem == circleciJob",
          "command": "circleci.copyJobNumber",
          "group": "circleci"
        }
      ]
    },
    "commands": [
      {
        "command": "circleci.reload",
        "title": "Reload details"
      },
      {
        "command": "circleci.openPage",
        "title": "Open in browser"
      },
      {
        "command": "circleci.cancelWorkflow",
        "title": "Cancel workflow"
      },
      {
        "command": "circleci.retryWorkflowAll",
        "title": "Retry all jobs"
      },
      {
        "command": "circleci.retryWorkflowFailed",
        "title": "Retry failed jobs"
      },
      {
        "command": "circleci.retryWorkflowFailed",
        "title": "Retry failed jobs"
      },
      {
        "command": "circleci.copyWorkflowId",
        "title": "Copy workflow ID"
      },
      {
        "command": "circleci.cancelJob",
        "title": "Cancel job"
      },
      {
        "command": "circleci.copyJobId",
        "title": "Copy job ID"
      },
      {
        "command": "circleci.copyJobNumber",
        "title": "Copy job number"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "CircleCI",
      "properties": {
        "circleci.apiToken": {
          "type": "string",
          "default": null,
          "markdownDescription": "A CircleCI API Token. This can be generated on your [Personal API Tokens](https://app.circleci.com/settings/user/tokens) page."
        },
				"circleci.VCSProvider": {
					"type": "string",
					"default": "github",
					"enum": [
						"github",
						"bitbucket"
					],
					"enumDescriptions": [
						"GitHub",
						"Bitbucket"
					],
					"description": "Your VCS Provider."
				},
        "circleci.customBranches": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "main"
          ],
          "description": "Add any custom branches you'd like to list Pipelines for. These will be displayed in addition to the currently checked-out branch."
        },
        "circleci.autoLoadWorkflows": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Automatically load Pipeline Workflows."
        },
        "circleci.autoLoadWorkflowJobs": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Automatically load Workflow Jobs."
        },
        "circleci.pipelineRefreshInterval": {
          "type": "number",
          "default": 120,
          "minimum": 0,
          "markdownDescription": "Seconds to wait before refreshing all **inactive** Pipelines. Set to `0` to disable."
        },
        "circleci.workflowRefreshInterval": {
          "type": "number",
          "default": 10,
          "minimum": 0,
          "markdownDescription": "Seconds to wait before refreshing an active Workflow's status. Set to `0` to disable."
        }
      }
    }
  }
}
